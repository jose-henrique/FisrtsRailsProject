<h1>Sign Up</h1>

<%= form_for @user do |form|%>
    <% if @user.errors.any? %>
        <div class="erros">
            <p>The form contains <%= pluralize(@user.erros.count, "errors") %></p>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg%></li>
                <%end%>
            </ul>
        </div>
        <div class="FormContainer">
            <%= form.label :name %>
            <%= form.text_field :name %>
            
            <%= form.label :email %>
            <%= from.text_field :email %>
            
            <%= form.label :password %>
            <%= form.text_field :password %>
            
            <%= form.label :password_confirmation %>
            <%= form.text_field :password_confirmation %>
            
            <%= form.submit "Sign Up" %>
        </div>
    <%end%>
<%end%>
